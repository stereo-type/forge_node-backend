# Application
APP_NAME=forge-node
NODE_ENV=development
TIMEZONE=Europe/Moscow

# User/Group for Docker containers (set to your local user to avoid permission issues)
# Linux/Mac: run `id -u` and `id -g`
# Windows: use 1000:1000
UID=1000
GID=1000
USERNAME=appuser

# Node.js Version
NODE_VERSION=20

# PostgreSQL Database
POSTGRES_VERSION=16
POSTGRES_DB=forge_node
POSTGRES_PORT=5433
POSTGRES_USER=fake
POSTGRES_PASSWORD=fake

# Redis
REDIS_PORT=6380

# Backend (NestJS)
BACKEND_PORT=3001

# Frontend (Next.js)
FRONTEND_PORT=3000

# Next.js Public URLs (used in browser)
NEXT_PUBLIC_API_URL: ${NEXT_PUBLIC_API_URL:-http://${APP_NAME}-backend:${BACKEND_PORT}}
NEXT_PUBLIC_WS_URL: ${NEXT_PUBLIC_WS_URL:-ws://${APP_NAME}-backend:${BACKEND_PORT}}

# Forge Flow API (Management Server)
FORGE_FLOW_API_URL=https://192.168.1.104:1001

# JWT Configuration
JWT_SECRET=fake
JWT_EXPIRES_IN=7d

# Node Registration
NODE_REGISTRATION_AUTO=false
NODE_REGISTRATION_IP=fake
NODE_REGISTRATION_USER_AGENT=ForgeNode/1.0
